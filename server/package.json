{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@graphql-codegen/cli": "^1.21.5",
    "@graphql-codegen/typescript": "^1.22.0",
    "@graphql-codegen/typescript-resolvers": "^1.19.2",
    "apollo-server": "^2.25.0",
    "concurrently": "^6.2.0",
    "graphql": "^15.5.0",
    "node-pg-migrate": "^5.9.0",
    "pg": "^8.6.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/pg": "^8.6.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "apollo-server-testing": "^2.25.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.4",
    "nodemon": "^2.0.7",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.2",
    "webpack": "^5.39.0",
    "webpack-cli": "^4.7.0"
  },
  "scripts": {
    "build": "webpack",
    "codegen": "graphql-codegen",
    "coverage": "yarn migrate up && jest --coverage --coverageDirectory='output/coverage/report'",
    "dev:codegen": "graphql-codegen --watch",
    "dev:server": "yarn migrate up && nodemon 'src/index.ts' --exec 'ts-node' src/index.ts -e ts,graphql",
    "dev": "concurrently -n \"server,codegen\" \"yarn dev:server\" \"yarn dev:codegen\"",
    "lint": "eslint src/",
    "migrate": "node-pg-migrate",
    "test": "yarn migrate up && jest --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageReporters": [
      "text",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "src/index.ts",
      "src/config.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
