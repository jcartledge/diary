{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.1.4",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.159",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.16",
    "@types/redux": "^3.6.0",
    "@types/reselect": "^2.2.0",
    "@types/styled-components": "^5.1.2",
    "graphql": "^15.3.0",
    "immer": ">=8.0.1",
    "lodash": "^4.17.20",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-scripts": "^4.0.0-next.77",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "reselect": "^4.0.0",
    "slugify": "^1.5.0",
    "styled-components": "^5.1.1",
    "tailwindcss": "^1.9.6",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "build:tailwind": "tailwind build src/tailwind.css -o src/tailwind.output.css",
    "watch:tailwind": "chokidar 'src/**/*.css' 'src/**/*.scss' --ignore src/tailwind.output.css -c 'npm run build:tailwind'",
    "dev": "npm-run-all build:tailwind --parallel watch:tailwind start:react",
    "start:react": "react-scripts start",
    "prebuild": "run-s build:tailwind",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "coverage": "CI=true react-scripts test --coverage --coverageDirectory='output/coverage/report'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^7.22.3",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^10.4.8",
    "@testing-library/user-event": "^12.1.1",
    "chokidar-cli": "^2.1.0",
    "mock-apollo-client": "^1.0.0",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/index.tsx",
      "/src/serviceWorker.ts"
    ],
    "coverageReporters": [
      "text",
      "html"
    ]
  }
}
