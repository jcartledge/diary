{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "@auth0/auth0-react": "^1.6.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.8",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.13",
    "graphql": "^15.5.1",
    "iso-datestring-validator": "^2.1.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "slugify": "^1.6.0",
    "styled-components": "^5.3.1",
    "tailwindcss": "^2.2.7",
    "typescript": "~4.4.2"
  },
  "scripts": {
    "build:tailwind": "tailwind build -i src/tailwind.css -o src/tailwind.output.css",
    "watch:tailwind": "chokidar 'src/**/*.css' 'src/**/*.scss' --ignore src/tailwind.output.css -c 'npm run build:tailwind'",
    "dev": "npm-run-all build:tailwind --parallel watch:tailwind start:react",
    "start:react": "react-scripts start",
    "build": "run-s build:tailwind && react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint src/**.{ts,tsx}",
    "coverage": "CI=true react-scripts test --coverage --coverageDirectory='output/coverage/report'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:react-hooks/recommended"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^8.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/react-router-dom": "^5.1.8",
    "autoprefixer": "^10.3.1",
    "chokidar-cli": "^3.0.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest-fail-on-console": "^2.0.4",
    "mock-apollo-client": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "souvlaki": "^0.1.1",
    "souvlaki-apollo": "^0.1.1",
    "souvlaki-react-router": "^0.2.0",
    "tailwindcss": "^2.2.7"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/App.tsx",
      "/src/routes/index.tsx",
      "/src/graphql/client.ts",
      "/src/index.tsx",
      "/src/serviceWorker.ts"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
